{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es5",
            "es6",
            "ES2018"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "typeRoots": [
            "./typing-stubs",
            "./node_modules/@types"
        ],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ],
    "ts-node": {
        "files": true
    }
}